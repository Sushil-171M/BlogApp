<div class="container">
<div class="row">
<!-- <%= campground.name %> -->
  <h1 style="text-align: center"> <b>Edit Campground Details</b></h1>
  <div style="width: 25%; margin: 30px auto;">

    <form action="/campground/<%=campground._id%>?_method=PUT" method="POST">
      <div class="form-group"  >
        <!-- <div style="text-align:center"> -->
        <h3 style="text-align: center"> <b>Name</b></h3>
        <!-- </div> -->
        
        <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>">
      </div>
      <div class="form-group">
          <h3 style="text-align: center"> <b>Image URL</b></h3>
      <input class="form-control" type="text" name="campground[image]" id="image" placeholder="https://images.unsplash.com/..."
          value="<%= campground.image %>" required>

      </div>
      <div class="form-group">
        <h3 style="text-align: center"> <b>Description</b></h3>
        <input class="form-control" type="text" name="campground[description]" id="description"
          value="<%= campground.description %>">
      </div>
      <div class="form-group"  style="width: 25%; margin: 10px auto;">
        <button class="btn btn-sm btn-primary btn-block">Update!</button>
      </div>
    </form>
    <a href="/campground">Go Back</a>
  </div>
</div>

</div>

<style type="text/css">
  .form {
    margin: 0 auto;
    width: 210px;
  }

  .form label {
    display: inline-block;
    text-align: right;
    float: left;
  }

  .form input {
    display: inline-block;
    text-align: left;
    float: right;
  }
</style>
